<%= form_with model: @event do | form | %>
  <% @event.errors.full_messages.each do |message| %>
      <div><%= message %></div>
    <% end %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

   <div>
    <%= form.label :event_date %>
    <%= form.datetime_field :event_date %>
  </div>

  <div>
    <%= form.label :location %>
    <%= form.text_field :location %>
  </div>

  <div>
    <%= form.label :submit %>
    <%= form.submit %>
  </div>
<% end %>