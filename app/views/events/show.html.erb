<h1><%= @event.title %></h1>
<ul>
  <li><strong> Date</strong><%= @event.event_date %>
  <li><strong> Location</strong><%= @event.location %>
</ul>
<%= form_with model: @invitation, url: "/invitations" do | form | %>
  <%= form.hidden_field :attended_event_id, value: @event.id %>
  <%= form.hidden_field :attendee_id, value: current_user.id %>
  <%= form.submit %>
<% end %>