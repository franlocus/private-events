<% past_events, upcoming_events = [], [] %>
<% @user.attended_events.each do | event | %>
  <% event.event_date < DateTime.current ? past_events << event.title : upcoming_events << event.title %>
<% end %>

<h1>Users#show</h1>
<h3>Past Events</h3>
  <ol>
    <% past_events.each do | event_title | %>
    <li><%= event_title %></li>  
    <% end %>
  </ol>
<h3>Upcoming Events</h3>
  <ol>
    <% upcoming_events.each do | event_title | %>
    <li><%= event_title %></li>  
    <% end %>
  </ol>